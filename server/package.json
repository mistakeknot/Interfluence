{
  "name": "interfluence-server",
  "version": "0.2.1",
  "description": "MCP server for interfluence corpus management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/bundle.js --external:fsevents",
    "dev": "tsc --watch",
    "start": "node dist/bundle.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.2.1",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.10.0",
    "@types/turndown": "^5.0.5",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.0"
  }
}
