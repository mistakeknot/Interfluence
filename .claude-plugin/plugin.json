{
  "name": "interfluence",
  "version": "0.2.6",
  "description": "Analyze your writing style and adapt Claude's output to sound like you. Ingest writing samples, build a voice profile, and apply it to any human-facing documentation or copy.",
  "author": {
    "name": "mistakeknot",
    "email": "mistakeknot@vibeguider.org"
  },
  "skills": [
    "./skills"
  ],
  "commands": [
    "./commands/interfluence.md"
  ],
  "agents": [
    "./agents/voice-analyzer.md"
  ],
  "agentCapabilities": {
    "./agents/voice-analyzer.md": ["analysis:voice-profile", "analysis:writing-style"]
  },
  "mcpServers": {
    "interfluence": {
      "type": "stdio",
      "command": "node",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/server/dist/bundle.js"
      ],
      "env": {}
    }
  }
}
